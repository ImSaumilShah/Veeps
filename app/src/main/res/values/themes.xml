<resources>
    <style name="Theme.Veeps" parent="@style/Theme.Leanback">
        <item name="browseRowsMarginTop">0dp</item>

        <item name="colorPrimary">@color/dark_black</item>
        <item name="colorPrimaryVariant">@color/dark_black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorPrimary">@color/dark_black</item>
        <item name="android:colorPrimaryDark">@color/dark_black</item>
        <item name="android:colorAccent">@color/white</item>

        <item name="colorPrimaryDark">@color/dark_black</item>
        <item name="colorAccent">@color/white</item>

        <item name="colorSecondary">@color/dark_black</item>
        <item name="colorSecondaryVariant">@color/dark_black</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="backgroundColor">@color/dark_black</item>
        <item name="background">@color/dark_black</item>
        <item name="android:windowBackground">@color/dark_black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/dark_black</item>
        <item name="colorSurfaceVariant">@color/dark_black</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_channel_foreground</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Veeps</item>
    </style>

    <style name="dialog" parent="Base.Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
    </style>

    <style name="dialog_full" parent="Base.Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>