<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="204dp"
    android:layout_height="277dp"
    android:clipToPadding="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_card_background_dark_black">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/app_description"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bottom_gradient"
            android:layout_width="0dp"
            android:layout_height="137.5dp"
            android:contentDescription="@string/app_description"
            android:src="@drawable/card_bottom_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail"
            app:layout_constraintStart_toStartOf="@+id/thumbnail" />

        <ImageView
            android:id="@+id/top_gradient"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:contentDescription="@string/app_description"
            android:src="@drawable/card_top_gradient"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail"
            app:layout_constraintStart_toStartOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@+id/thumbnail" />

        <TextView
            android:id="@+id/title"
            fontPath="fonts/SaansMedium.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:textAlignment="gravity"
            android:textColor="@color/white_50"
            android:textIsSelectable="false"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail"
            app:layout_constraintStart_toStartOf="@+id/thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/logo_label"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/logo_label"
            fontPath="fonts/RuderPlakatRegular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.85"
            android:maxLines="2"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="32sp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail"
            app:layout_constraintStart_toStartOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@id/bottom_gradient"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/app_description"
            android:scaleType="centerInside"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/title"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail"
            app:layout_constraintHeight_max="100dp"
            app:layout_constraintHeight_min="25dp"
            app:layout_constraintStart_toStartOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@id/bottom_gradient"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed" />

        <LinearLayout
            android:id="@+id/date_and_live_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@+id/thumbnail">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/date_container"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/selector_event_date_card_background"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:paddingEnd="6dp"
                android:paddingBottom="3dp"
                app:blurOverlayColor="@color/white_10">

                <TextView
                    android:id="@+id/date"
                    fontPath="fonts/SaansMedium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingBottom="1dp"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    tools:ignore="MissingPrefix" />

            </eightbitlab.com.blurview.BlurView>

            <LinearLayout
                android:id="@+id/live_badge_container"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/selector_event_live_badge_card_background"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:paddingEnd="6dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/live_badge_dot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginEnd="3dp"
                    android:contentDescription="@string/app_description"
                    android:src="@drawable/rounded_card_background_white" />

                <TextView
                    android:id="@+id/live_badge"
                    fontPath="fonts/SaansMedium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingBottom="2dp"
                    android:text="@string/live_label"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/badge_container"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_event_badge_card_background"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingTop="3dp"
            android:paddingEnd="6dp"
            android:paddingBottom="3dp"
            app:layout_constraintStart_toEndOf="@+id/date_and_live_container"
            app:layout_constraintTop_toTopOf="@+id/thumbnail">

            <TextView
                android:id="@+id/badge"
                fontPath="fonts/SaansMedium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="1dp"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textIsSelectable="false"
                android:textSize="11sp"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/continueWatchingProgress"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressDrawable="@drawable/continue_watching_progress"
            android:splitTrack="false"
            android:thumb="@drawable/background_transparent"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/thumbnail"
            app:layout_constraintStart_toStartOf="@+id/thumbnail" />

        <ImageView
            android:id="@+id/foreground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/app_description"
            android:scaleType="centerCrop"
            android:src="@drawable/rounded_card_background_black_transparent"
            app:layout_constraintBottom_toBottomOf="@id/thumbnail"
            app:layout_constraintEnd_toEndOf="@id/thumbnail"
            app:layout_constraintStart_toStartOf="@id/thumbnail"
            app:layout_constraintTop_toTopOf="@id/thumbnail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
