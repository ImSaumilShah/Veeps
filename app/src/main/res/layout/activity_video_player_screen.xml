<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feature.video.ui.VideoPlayerScreen">

    <!-- Data -->
    <data>

        <import type="android.view.View" />

        <!-- View Model -->
        <variable
            name="video"
            type="com.veeps.app.feature.video.viewModel.VideoPlayerViewModel" />

        <!-- Screen -->
        <variable
            name="videoPlayerScreen"
            type="com.veeps.app.feature.video.ui.VideoPlayerScreen" />

    </data>

    <!-- Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_black"
        android:keepScreenOn="true">

        <!-- Guidelines -->
        <include layout="@layout/guidelines" />

        <!-- Layout Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/dark_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Inner Container -->
            <include layout="@layout/guidelines" />

            <!-- Video Player -->
            <androidx.media3.ui.PlayerView
                android:id="@+id/video_player"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:animation_enabled="true"
                app:artwork_display_mode="fill"
                app:auto_show="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:resize_mode="fit"
                app:show_buffering="never"
                app:show_subtitle_button="true"
                app:use_artwork="true"
                app:use_controller="false" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/controls"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_controls"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/app_description"
                        android:src="@drawable/video_player_header_gradient"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Logo -->
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="45dp"
                        android:layout_height="9dp"
                        android:layout_marginStart="48dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="3dp"
                        android:contentDescription="@string/app_description"
                        android:src="@drawable/logo"
                        app:layout_constraintEnd_toStartOf="@id/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Divider -->
                    <ImageView
                        android:id="@+id/divider"
                        android:layout_width="2dp"
                        android:layout_height="9dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:contentDescription="@string/app_description"
                        android:src="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/logo"
                        app:layout_constraintEnd_toStartOf="@id/title"
                        app:layout_constraintStart_toEndOf="@id/logo"
                        app:layout_constraintTop_toTopOf="@id/logo" />

                    <TextView
                        android:id="@+id/title"
                        fontPath="fonts/SaansMedium.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="45dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/divider"
                        app:layout_constraintTop_toTopOf="@id/divider"
                        tools:ignore="MissingPrefix" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/live_controls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/app_description"
                        android:src="@drawable/video_player_gradient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/live_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="2dp"
                        app:blurOverlayColor="@color/white_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            fontPath="fonts/SaansMedium.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:drawableStart="@drawable/rounded_card_background_white_size_5"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.03"
                            android:lines="1"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="@string/live_label"
                            android:textAlignment="gravity"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textIsSelectable="false"
                            android:textSize="10sp"
                            tools:ignore="MissingPrefix" />

                    </eightbitlab.com.blurview.BlurView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/vod_controls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/vod_bottom_gradient"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/app_description"
                        android:src="@drawable/video_player_gradient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/image_preview"
                        android:layout_width="160dp"
                        android:layout_height="0dp"
                        android:src="@drawable/background_transparent"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"
                        app:layout_constraintBottom_toTopOf="@+id/seek_duration"
                        app:layout_constraintDimensionRatio="16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/seek_duration"
                        fontPath="fonts/SaansMedium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_background_white"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:padding="6dp"
                        android:text="@string/time_label"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/progress"
                        app:layout_constraintEnd_toEndOf="@id/image_preview"
                        app:layout_constraintStart_toStartOf="@id/image_preview"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/play_pause"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="45dp"
                        android:background="@drawable/selector_play_pause_background"
                        android:contentDescription="@string/app_description"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:nextFocusLeft="@id/play_pause"
                        android:nextFocusRight="@id/progress"
                        android:nextFocusUp="@id/play_pause"
                        android:nextFocusDown="@id/play_pause"
                        android:nextFocusForward="@id/play_pause"
                        android:padding="7dp"
                        android:src="@drawable/selector_play_pause"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:shapeAppearanceOverlay="@style/CornerSize10Percent" />

                    <androidx.media3.ui.DefaultTimeBar
                        android:id="@+id/progress"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:nextFocusLeft="@id/play_pause"
                        android:nextFocusRight="@id/current_duration"
                        android:nextFocusUp="@id/play_pause"
                        android:nextFocusDown="@id/current_duration"
                        android:nextFocusForward="@id/current_duration"
                        app:bar_height="3dp"
                        app:buffered_color="@color/white_50"
                        app:layout_constraintBottom_toBottomOf="@+id/play_pause"
                        app:layout_constraintEnd_toStartOf="@+id/current_duration"
                        app:layout_constraintStart_toEndOf="@+id/play_pause"
                        app:layout_constraintTop_toTopOf="@+id/play_pause"
                        app:played_color="@color/white_90"
                        app:scrubber_color="@color/white"
                        app:scrubber_disabled_size="8dp"
                        app:scrubber_dragged_size="8dp"
                        app:scrubber_drawable="@drawable/rounded_card_background_white_size_10"
                        app:scrubber_enabled_size="8dp"
                        app:unplayed_color="@color/white_10" />

                    <TextView
                        android:id="@+id/current_duration"
                        fontPath="fonts/SaansMedium.ttf"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/selector_play_pause_background"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:nextFocusLeft="@id/progress"
                        android:nextFocusRight="@id/current_duration"
                        android:nextFocusUp="@id/play_pause"
                        android:nextFocusDown="@id/play_pause"
                        android:nextFocusForward="@id/play_pause"
                        android:selectAllOnFocus="true"
                        android:text="@string/time_label"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/play_pause"
                        tools:ignore="MissingPrefix" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Loader -->
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/loader"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateTint="@color/white"
            android:progress="50"
            app:layout_constraintBottom_toBottomOf="@+id/bottom"
            app:layout_constraintEnd_toEndOf="@+id/end"
            app:layout_constraintStart_toStartOf="@+id/start"
            app:layout_constraintTop_toBottomOf="@id/top" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/error_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true">

            <ImageView
                android:id="@+id/heroImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Error Container Background Blur -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/error_layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:blurOverlayColor="@color/black_33"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Error Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Guidelines -->
                    <include layout="@layout/guidelines" />

                    <!-- Error Text -->
                    <TextView
                        android:id="@+id/error"
                        fontPath="fonts/SaansMedium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="5dp"
                        android:includeFontPadding="false"
                        android:padding="10dp"
                        android:text="@{video.errorMessage}"
                        android:textColor="@color/white"
                        android:textIsSelectable="false"
                        android:textSize="16sp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toTopOf="@+id/error_action_container"
                        app:layout_constraintEnd_toEndOf="@+id/post_quarter_width"
                        app:layout_constraintStart_toStartOf="@+id/pre_quarter_width"
                        app:layout_constraintTop_toTopOf="@+id/top"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <!-- Error CTA Container -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/error_action_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/bottom"
                        app:layout_constraintEnd_toEndOf="@id/error"
                        app:layout_constraintStart_toStartOf="@id/error"
                        app:layout_constraintTop_toBottomOf="@+id/error">

                        <!-- Error Positive CTA -->
                        <Button
                            android:id="@+id/positive"
                            fontPath="fonts/SaansMedium.ttf"
                            android:layout_width="170dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/selector_button_white"
                            android:contentDescription="@string/app_description"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:lines="1"
                            android:onClick="@{(v)-> videoPlayerScreen.onErrorPositive(v.tag)}"
                            android:text="@{video.errorPositiveLabel}"
                            android:textAllCaps="false"
                            android:textColor="@color/selector_button_label_white"
                            android:textIsSelectable="false"
                            android:textSize="12sp"
                            android:visibility="@{video.isErrorPositiveApplicable() ? View.VISIBLE : View.GONE}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/negative"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Error Negative CTA -->
                        <Button
                            android:id="@+id/negative"
                            fontPath="fonts/SaansMedium.ttf"
                            android:layout_width="170dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/selector_button_white"
                            android:contentDescription="@string/app_description"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:lines="1"
                            android:onClick="@{(v)-> videoPlayerScreen.onErrorNegative(v.tag)}"
                            android:text="@{video.errorNegativeLabel}"
                            android:textAllCaps="false"
                            android:textColor="@color/selector_button_label_white"
                            android:textIsSelectable="false"
                            android:textSize="12sp"
                            android:visibility="@{video.isErrorNegativeApplicable() ? View.VISIBLE : View.GONE}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/positive"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </eightbitlab.com.blurview.BlurView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
